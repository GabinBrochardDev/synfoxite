{# templates/game/start.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Devinez le mot mystère</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
</head>
<body>
    <div class="container">
        <h1>Devinez le mot mystère</h1>

        <div class="hints-container">
            <h2>Indices :</h2>
            <ul>
                {% for hint in gameData.hints %}
                    <li>{{ hint }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="form-container">
            <form action="{{ path('play_game') }}" method="post">
                <label for="answer">Votre réponse :</label>
                <input type="text" id="answer" name="answer" required>
                <button type="submit">Valider</button>
            </form>

            <p>Vous avez {{ gameData.remainingAttempts }} tentatives pour trouver le mot.</p>
        </div>
    </div>
</body>
</html>
