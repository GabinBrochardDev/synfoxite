{# templates/Gold/index.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    body {
        background-color: #d0e7f9;
        font-family: Arial, sans-serif;
        color: #333;
        padding: 20px;
    }

    h1 {
        font-size: 2.5em;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .container {
        max-width: 400px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .container p {
        font-size: 1.2em;
        text-align: center;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    input[type="number"] {
        font-size: 1.5em;
        padding: 10px;
        margin-bottom: 15px;
        width: 80px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button.btn {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        font-size: 1.2em;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button.btn:hover {
        background-color: #0056b3;
    }

    .alert {
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
        font-size: 1.1em;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Devinez le chiffre</h1>

        {% if isOver %}
            <p>Le jeu est termin√©. Cliquez <a href="{{ path('app_Gold') }}">ici</a> pour rejouer.</p>
        {% else %}
            <p>Nombre de tentatives restantes : {{ 10 - attempts }}</p>
            {{ form_start(form) }}
                {{ form_row(form.guess) }}
                <button class="btn">Deviner</button>
            {{ form_end(form) }}
        {% endif %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
